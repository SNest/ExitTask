@using Resources
@model ExitTask.Presentation.Areas.Admin.Models.CityViewModel

@{
    this.ViewBag.Title = "AddCity";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCity</h2>

@using (this.Html.BeginForm("AddCity", "GeoManagement", FormMethod.Post))
{
    @(this.Html.AntiForgeryToken())

    <div class="form-horizontal">
        <h4>CityViewModel</h4>
        <hr/>
        <fieldset>
            <legend>Legend</legend>
            @(this.Html.ValidationSummary(true, "", new { @class = "text-danger" }))
            <div class="form-group">
                @(this.Html.LabelFor(model=>model.Name, Resource.Name, new { @class = "control-label col-md-2 floating-label" }))
                <div class="col-md-10">
                    @(this.Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control floating-label" } }))
                    @(this.Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" }))
                </div>
            </div>

            <div class="form-group">
                @(this.Html.Label(Resource.Description, new { @class = "control-label col-md-2 floating-label" }))
                <div class="col-md-10">
                    @(this.Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control floating-label " } }))
                    @(this.Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" }))
                </div>
            </div>

            <div class="form-group">
                @(this.Html.Label(Resource.Country, new { @class = "control-label col-md-2 floating-label" }))
                <div class="col-md-10">
                    @(this.Html.DropDownListFor(model => model.CountryId, this.Model.Countries, new { @class = "form-control floating-label" }))
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default"/>
                </div>
            </div>
        </fieldset>
    </div>
}