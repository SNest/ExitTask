@using Resources
@model ExitTask.Presentation.Areas.Security.Models.UserAuthorizationViewModel

@{
    this.ViewBag.Title = "SignIn";
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignIn</h2>

@using (this.Html.BeginForm()) 
{
    @(this.Html.AntiForgeryToken())

    <div class="form-horizontal">
        <h4>UserAuthorizationViewModel</h4>
        <hr />
        @(this.Html.ValidationSummary(true, "", new { @class = "text-danger" }))
        <div class="form-group">
            <div class="col-md-10">
                @(this.Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control floating-label", placeholder = Resource.Email } }))
                @(this.Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @(this.Html.PasswordFor(model => model.Password, new { @class = "form-control floating-label", placeholder = Resource.Password }))
                @(this.Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" }))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @(this.Html.ActionLink("Back to List", "Index"))
</div>
