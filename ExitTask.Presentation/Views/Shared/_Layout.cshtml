<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(this.ViewBag.Title) - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/material.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-material-styles/roboto.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-material-styles/material.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-material-styles/ripples.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-material-styles/material-fullpalette.min.css" rel="stylesheet"/>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
<div class="demo-layout-transparent mdl-layout mdl-js-layout">
    @(this.Html.Partial("_Header"))
    <main class="mdl-layout__content">
        <div class="page-content">
            @(this.RenderBody())
        </div>
        @(this.Html.Partial("_Footer"))
    </main>
</div>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/material.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootstrap-material-scripts/ripples.min.js"></script>
<script src="~/Scripts/bootstrap-material-scripts/material.min.js"></script>
<script>
    $.material.init();
    $.material.ripples();
    $.material.input();
</script>


</body>
</html>