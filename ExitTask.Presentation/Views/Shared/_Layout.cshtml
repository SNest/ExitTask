<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(this.ViewBag.Title) - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/material.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/material.min.js"></script>
    <style>
        .mdl-layout__content {
            display: -webkit-flex;
            display: flex;
            -webkit-flex-direction: column;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <div class="demo-layout-transparent mdl-layout mdl-js-layout">
        @(this.Html.Partial("_Header"))



        <main class="mdl-layout__content">
            <div class="page-content">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--8-col ">@(this.RenderBody())</div>
                </div>
            </div>
            @(this.Html.Partial("_Footer"))
        </main>
        </div>



        @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
</body>
</html>